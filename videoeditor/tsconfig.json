{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "jsx": "preserve",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowJs": true,
        "lib": ["DOM", "ESNext", "WebWorker"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}